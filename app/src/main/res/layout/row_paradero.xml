<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/green_background"

    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recorridos_paradero_servicio"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/detalleparadero_bus_bg"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="201ec"
        android:textColor="@color/white"
        android:textSize="16sp" />



    <RelativeLayout
        android:id="@+id/recorridos_paradero_container"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"

        android:layout_toRightOf="@id/recorridos_paradero_servicio"
        android:background="@color/white"
        android:paddingLeft="4dp"
        >

        <TextView
            android:id="@+id/recorridos_paradero_tiempo"

            fontPath="fonts/TSInfReg.otf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Entre 05 y 09 min."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/detalleparadero_reloj" />


        <TextView
            android:id="@+id/recorridos_paradero_distancia"
            fontPath="fonts/TSInfReg.otf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="28dp"
            android:text="2540 mts."
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/detalleparadero_distancia" />

        <ImageView
            android:id="@+id/recorridos_paradero_siguiente"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/detalleparadero_forward" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recorridos_paradero_container_right"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/recorridos_paradero_servicio"

        android:background="@color/white"
        android:paddingLeft="4dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/recorridos_paradero_tiempo_2"

            fontPath="fonts/TSInfReg.otf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Entre 06 y 10 min."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/detalleparadero_reloj" />


        <TextView
            android:id="@+id/recorridos_paradero_distancia_2"
            fontPath="fonts/TSInfReg.otf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="28dp"
            android:text="2540 mts."
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/detalleparadero_distancia" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/detalleparadero_back"
            android:onClick="onClick" />
    </RelativeLayout>



</RelativeLayout>