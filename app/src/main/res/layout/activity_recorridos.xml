<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.magnesia.itransantiago.PlanificadorActivity"
    tools:ignore="MissingPrefix" >

    <RelativeLayout
        android:id="@+id/planificador_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green_header"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/header_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_itransantiago" />

            <TextView
                android:id="@+id/header_titulo"
                fontPath="fonts/TSInfReg.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Recorridos"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/planificador_menu"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@color/green_background"
        android:layout_height="fill_parent">

        <TextView
            fontPath="fonts/TSInfReg.otf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Ingrese el nÃºmero del recorrido"
            android:textColor="@color/white"
            android:textSize="14sp" />
        
        <EditText
            android:textColor="@color/black"
            android:id="@+id/recorridos_servicio"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:hint="Ej: 503"
            android:paddingLeft="10dp"
            android:textSize="32sp"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="48dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_ok"
            android:onClick="onClick" />

        </LinearLayout>


</RelativeLayout>