<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.gob.modernizacion.itransantiago.PlanificadorActivity"
    tools:ignore="MissingPrefix" >

    <include layout="@layout/header" android:id="@+id/header" />

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/planificador_mapa"
        class="com.androidmapsextensions.SupportMapFragment"
        map:cameraZoom="13"
        map:cameraTargetLat="-33.4430"
        map:cameraTargetLng="-70.6537"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header" />

    <Button
        android:id="@+id/mapa_my_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/locate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        >

    </Button>

    <RelativeLayout
        android:id="@+id/planificador_resultados"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/header"
        android:background="@color/black_70">
        
        <Button
            android:onClick="onClick"
            android:id="@+id/planificador_resultados_guardar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_guardar_ruta"
            android:gravity="center_vertical" />
        
        <ImageView
            android:id="@+id/planificador_resultados_reloj"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/planificador_resultados_guardar"
            android:background="@drawable/reloj"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/planificador_resultados_duracion"
            fontPath="fonts/TSInfReg.otf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/planificador_resultados_reloj"
            android:gravity="center_vertical"
            android:text="60 minutos"
            android:textColor="@color/white"
            android:textSize="20sp" />
        
        <Button
            android:id="@+id/planificador_btn_mas_rutas"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_mas_rutas"
            android:onClick="onClick" />
        
        <TextView
            android:id="@+id/planificador_text_view_mas_rutas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/planificador_btn_mas_rutas"
            android:layout_alignTop="@id/planificador_btn_mas_rutas"
            android:background="@drawable/badge_circle"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>